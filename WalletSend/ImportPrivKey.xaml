<Window x:Class="Wallet.ImportPrivKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallet"
        mc:Ignorable="d"
        Title="Import Private Key" Background="LightBlue" Height="330" Width="700" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="privKey"  HorizontalAlignment="Left" Margin="150,50,0,0" TextWrapping="Wrap" Text="{Binding lPrivKey}" VerticalAlignment="Top" MinWidth="500" MaxWidth="700" Height="30" />
        <TextBox Name="address" IsReadOnly="True" HorizontalAlignment="Left" Margin="150,100,0,0" TextWrapping="Wrap" Text="{Binding lAddress}" VerticalAlignment="Top" MinWidth="500" MaxWidth="700" Height="30"/>
        <Label Content="Private Key" HorizontalAlignment="Left" Height="30" Margin="10,50,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Address" HorizontalAlignment="Left" Height="30" Margin="10,100,0,0" VerticalAlignment="Top" Width="100" />
        <Button Name="Send_Money" Click="Send_Money_Click" Content="Get Address" Background="Silver"  HorizontalAlignment="right" Height="30" Width="100" Margin="0,220,44,30"></Button>
    </Grid>
</Window>
